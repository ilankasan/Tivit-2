<h1><%= @title %></h1>


 <%= form_tag(:controller => "activities" , :action => @action, :method => "put", :id => @activity.id) do %>
 <%if @action == "propose_date"%>
 	<!-- pROPOSED need it by -->
    	<div class="field">

			<%= label_tag(:propose_date, "I can provide by: ", :class => "field-label") %>		
	     	<%= text_field_tag(:propose_date, nil, :placeholder => "choose date", :class => "input-date") %> 
	     	<img src="images/cal.gif" onclick="javascript:NewCssCal('propose_date', 'mmddyyyy', 'arrow')" class="ico_calc" style="cursor:pointer"/>
	
        </div>

 <%end%>
 
 <%if @action == "reassign"%>
 	<!-- Choose who to reaisgn it-->
			  <div class="field">
			  	<div class="field-label">
			  		<%= label_tag(:assign_to, "Ask someelse to help with tivit", :class => "field-label") %>
			  	</div>
			  	<%= text_field_tag(:assign_to, nil, :placeholder => "enter one email address...", :class => "input-invitees") %> 
			  </div>

 <%end%> 
 
  <div class="field">
  	<%= label_tag(:comment, "Details:") %><%= text_area_tag(:comment) %> 
  </div>
  
  <div class="actions">
  <%= submit_tag(@title) %>
  </div>

<% end %> 



