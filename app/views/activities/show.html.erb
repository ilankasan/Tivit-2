<tr>
  <td class="activity">

    <span class="content"><%= @activity.name %></span>
    
    <span class="content"> is <%= @activity.status %></span><br>
    
    <span class="content">Details: <%= @activity.description %></span><br>
    
    <span class="content">Due : <%= @activity.due %></span><br>
    
    	
   <% @activity.users.each do |user| %>
   	  <% if current_user.id == @activity.owner_id && user.id == current_user.id %>
      	<span class="content">I am the owner</span><br>
   	  <% else %>
   		<% if user.id == @activity.owner_id %>
   			<span class="content"><%= user.email%> is the owner of this task</span><br>
   		<% else %>
 			<% if user.id == current_user.id%>	
   				<span class="content">i am participating</span><br>
   			<% else %>
   				<span class="content"><%= user.email%> is participating</span><br>
   			<% end %>
   		<% end %>
   			
   	  <% end %> 	
      
   <% end %>
   
   <% if @activity.due!=nil %>
      <span class="timestamp">tivit is due in <%= time_ago_in_words(@activity.due) %> </span>
   <% end %>
    
   
      
   
    <span class="timestamp">tivit created <%= time_ago_in_words(@activity.created_at) %> ago.</span>
  </td>
  <% if current_user.id == (@activity.owner_id) %>
  <td>
  	<%= link_to "edit", edit_activity_path(@activity) %>            
    <%= link_to "delete", @activity, :method => :delete,
                                     :confirm => "You sure you want to delete" +@activity.name+"?",
                                     :title => @activity.name %>
  </td>
  <% end %>
</tr>