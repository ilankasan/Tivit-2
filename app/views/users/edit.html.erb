<h1>Edit user</h1>

<% form_for :user, @user, :url => user_path,  :html => { :multipart => true } do |f| %>
  
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %><br />
   
<% if false %>   
   <p>
    <label for="profile_image">Upload A Mugshot:</label>
    <%= f.file_field :uploaded_data %>
  </p>
<% end %>
      
   
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>






