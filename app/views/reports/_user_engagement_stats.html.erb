<!-- Display a single tivits in Team tivit within an acitivty-->
	<%if user_engagement_stats == nil%>
		<%return%>
	<%end%>
	<%user = user_engagement_stats%>
 <tr> 
 <font size = "4">
 	<td><%=user.get_name%></td>
 	<td><%=user.get_email%></td>
 	<%puts "______>>>>>>>>>>>>  user engagement stats 1 <<<<__________________"%>
 	
 	<%if user.account != nil && user.account.created_at != nil%>
		<td><%=time_ago_in_words(user.account.created_at)%> ago</td>
 	<%else%>
		<td>?</td>
	<%end%>
 	
 	<%puts "______>>>>>>>>>>>>  user engagement stats 2 <<<<__________________"%>
 	
 	<!--b>Last event</b-->
 	<%if user.tivitcomments != nil && user.tivitcomments.size > 0 %>
		<td ><%=time_ago_in_words(user.tivitcomments.last.updated_at)%> ago</td>
 	<%else%>
		<td>?</td>
	<%end%>
 	
 	
 	
 	<!--b>Last week</b-->
 	<%puts "______>>>>>>>>>>>>  user engagement stats 3 <<<<__________________"%>
 	
	<td align="center"><%=user.tivitcomments.where("created_at > ?", Time.now-7.day).count%> </td>
 			
 	<!--b>Last 2 weeks</b-->
 	<td align="center"><%=user.tivitcomments.where("created_at > ?", Time.now-14.day).count%> </td>
 	
	<!--b>Last 30 days</b-->
	<td align="center"><%=user.tivitcomments.where("created_at > ?", Time.now-30.day).count%> </td>
 	
	<!--b>Since inception</b-->
	<td align="center"><%=user.tivitcomments.where("created_at > ?", Time.now-30.year).count%> </td>
 	 			 
 	
 	
 </font>	 	
 </tr>
 				