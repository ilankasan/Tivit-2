<title>Analytics</title>

<!-- Create new activity form only for logged in users The second condition is to make sure not to display new activity when creating a new tivit -->  
<div id="homepage-tivit-list-container">
	
	<div id="tivit-container" class="tab-content">

		<div class="tabs">

			<ul id="tabs-nav">
				<li class="tab">
	                <a href="#overview-report">Overview</a>
	            </li>
	            <li class="tab open">
	                <a href="#users-report">Users</a>
	            </li>
	            
            	<li class="tab">
	                <a href="#user-engagement">Engagement</a>
	            </li>
	                
            	
            </ul>
        </div>
    
   		<!-- This is the div that holds the On Deck/All Updates/New Requests tab Content -->    
		<div class="tabContent">
					
	        <div id="overview-report" class="overview tabInfo"> 

				<table class="profile" summary="Profile information">
				<b>User Count</b> 
				  <tr> <td>Activated     : </td> <td><%=@user_adopt["activated"]%></td> </tr>
				  <tr> <td>Non Activated : </td> <td><%=@user_adopt["non_activated"]%></td> </tr>
				  <tr> <td>Total Users   : </td> <td><%=@user_adopt["total"]%></td> </tr>
				  
				  <tr></tr><tr></tr>
				  <tr> <td>Joined Viraly : </td> <td><%=@user_adopt["viraly_joined"]%></td> </tr>
				</table>
				
				<br>
				  
				<table class="profile" summary="Profile information">
				<b>Tivits stats</b> 
				  <tr> <td>Activities     		 : </td> <td><%=@tivits_stats["activities"]%></td> </tr>
				  <tr> <td>Tivits 				 : </td> <td><%=@tivits_stats["tivits"]%></td> </tr>
				  <tr> <td>Avg Tivits / Activity : </td> <td><%=@tivits_stats["avg_t_per_a"]%></td> </tr>
				       
				</table>
			</div>

			<div id="users-report" class="users-report tabInfo">
				
				
				<table class="profile" summary="Profile information">
					<h1>tiviti user report</h1>
					<td><b>Name</b></td>
					<td><b>email</b></td>
					<td><b>Created/Joined </b></td>
					<td><b>Activities </b></td>
	 				<td><b>my tivits</b></td>
	 				<td><b>team tivits</b></td>
	 				<td><b>Signed in </b></td>
	 				<%= render :partial => 'reports/user_stats', :collection =>  @users       , :as => :user  %> 

 							       
				</table>
				
				<%= will_paginate @users %>
			</div>
			
		
			<div id="user-engagement" class="user-engagement tabInfo">
				 	</br>

				<% unless @active_users == nil %>
				<table class="profile" summary="Profile information">
					<h1>User Engagement </h1>
					<tr>Engagement event is when a user creates, closes, responds or comments on a tivit<br></tr></br> 
			
					<td width="200"><b> Name </b></td>
					<td width="150"><b> email </b></td>
					<td width="300"><b> Joined </b></td>
					<td width="300"><b> Last event </b></td>
					<td width="100"><b> Last week </b></td>
					<td width="100"><b> Last 2 weeks </b></td>
	 				<td width="100"><b> Last 30 days </b></td>
	 				<td width="100"><b> Since inception </b></td>
	 				
				     <%= render :partial => 'reports/user_engagement_stats', :collection =>  @active_users,:locals => {:tabview => "user-engagement"} %>
			    </table> 
				<% end %>
			</div>
		</div>  
	</div>
</div>
 
 		
	
