<title>tiviti - Sign Up </title>


<%# message to users they either need to sign in or create an account in order to respond %>

<% if (@email != nil) %>
	<div align="center"><font size = "3"  color = "black" >To respond to this request you must create a new account</font></div>
<%end%>

<div id="sign-in-up-box"> 
	<h1>tiviti</h1>
	<%#puts "resource= "+resource.inspect%>
	
	 
		
	<div id="sign-in-up-form">
		<b></b></br>
			
			
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
 		<%= devise_error_messages! %>
		
		<div class ="fieldset">			
		
			<%= f.fields_for :user do |user| %>
				<!-- User Name -->
				<div class="label">
					<%= user.label :name %>
					
				</div>
				
				<%= user.text_field :name, :class => "input", :autofocus => "true" %>
			
			<% end %>
				
			<!-- User Email Address -->	
			<div class="label">
				<%= f.label :email %>
			</div>
			<% if(@email == nil) %>
				<%= f.email_field :email, :class => "input" %>
				
			<%else%>
				<%puts "email ===="+@email%>
				<%= f.email_field :email, :class => "input", :placeholder => @email,  :disabled => true %>
				<%= f.hidden_field :email, :value =>@email%>
				<%= f.hidden_field :viral, :value =>true%>
				
				
			<%end%>
			
			<div class="clear"></div>
			
			<!-- User Password -->	
			<div class="label">
				<%= f.label :password %>
			</div>
			
			<%= f.password_field :password, :class => "input" %>
				
			<div class="clear"></div>
	        
	        <!-- User Password Confirmation -->	
			<div class="label">
					<%= f.label :password_confirmation %>
			</div>
			
			<%= f.password_field :password_confirmation, :class => "input" %>
				
			<div class="clear"></div>
	        				  		
	  		<div><%= f.submit "Sign up", :class => "button" %></div>
	  		
		<% end %>
		
		<br />
		<br />
					
		<%= render :partial => "my_devise/shared/links" %>
			

	</div>
  
  </div>
  
  <div id="remote2">
	<b>Or, sign in with</b>
        <div id="authentication_services" class="box">
        	<a href="/auth/facebook"><%= image_tag "facebook_64.png", :size => "64x64",  :alt => "Facebook", :class =>  "authentication_services" %></a>
            <a href="/auth/google"><%= image_tag "google_64.png", :size => "64x64",  :alt => "Google", :class =>"services" %></a>            
        </div>
    </div>
</div>

