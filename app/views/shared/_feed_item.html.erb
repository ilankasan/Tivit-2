  <td>
<!-- Displaying comment -->

<% feed_item.tivitcomments.each do |comment| %>
   	  <span class="content"><b><%= comment.user.name%>:</b>  </span>
   	  <span class="content"><%= comment.comment%> </span>
   	  <br>
   	   	
<% end %>
    

<!-- Add comment -->  
  
  <span class="content">
   <%= form_for([feed_item, feed_item.tivitcomments.build]) do |f| %>
