<%= form_for @activity do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <b>Name       : </b>    <%= f.text_field :name %>
  </div>
  <div class="field">
     <b>Description:  </b>   <%= f.text_area :description%>
  </div>
  <div class="field">
     <b>invite collaborator (add email)  </b>   <%= f.text_area :collaborators%>
  </div>
  
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>

