<!-- Display a tivit within an activity on the  Dashboard -->


<li class="record busy">
	<div class="status">
		<div class="icon"></div>
	</div>
	<div class="avatar">
		<%= render :partial => 'profile_images/profile_image', :collection =>  [tivit.get_owner], :as => :user%> 
	</div>
	<div class="text">
		<div class="activity">
		   	<div class="attach">
		   		<i>1</i>
		    </div>
<!-- do not display chat icon if no new comments !-->		    
		    <% unless tivit.get_number_of_comments == 0%>
		   		<div class="comments">
		   			<i><%=tivit.get_number_of_comments%></i>
		    	</div>
		    <%end%>
		</div>
		
		<%= tivit.name%>
		
	</div>
	<div class="clear"></div>
</li>
		            


