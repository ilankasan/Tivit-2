<div class="tvit-day">
	<div class="calendar today">
		<div class="text">today (statis)</div>
	    	</div>
                <div class="tvit-list">
                    <div class="label">
                        <div class="progress">
                            <strong>static%</strong>
                           
                           <%= activity_db.get_activity_tivit_status %> (temp) 
	        
                        </div>
	                        
	                        <a><%= link_to activity_db.name, activity_db, :action => "show",
	  									   :method => "get",
	                                       :title  => activity_db.name,
	                                       :class => "text" %></a>
