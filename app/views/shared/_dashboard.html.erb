<!-- Create new activity form only for logged in users The second condition is to make sure not to display new activity when creating a new tivit -->  
<% if signed_in? && !(controller.controller_name=="activities" && controller.action_name == "new_tivit")%>
	
	<div id="new-activity-background">
		<div id="new-activity">
			<%= render 'shared/activity_form' %>
		</div>
	</div>
	
<% end %>

<div id="homepage-tivit-list-container">
	
    <div class="filter">
        <dl>
            <dt>Show:</dt>
            <dd>
                <input type="checkbox" value="" id="my_activ"/>
                <label for="my_activ">My Activities</label>
            </dd>
            <dd>
                <input type="checkbox" value="" id="my_tivit"/>
                <label for="my_tivit">My tivits</label>
            </dd>
        </dl>
    </div>
	
	<div id="tivit-container" class="tab-content">

		<div class="tabs">
             <div class="status">You have <%= @tivits_participate.count%> activities / tivits </div>

			<ul id="tabs-nav">
				<li class="tab open">
	                <a href="#tivit-desk">On Deck</a>
	            </li>
	            <li class="tab">
	                <a href="#t2">All Updates</a>
	                <i>5</i>
	            </li>
	            <li class="tab">
	                <a href="#t3">New Requests</a>
	                <i>2</i>
            	</li>
            </ul>
        </div>
    
   		<!-- This is the div that holds the On Deck/All Updates/New Requests tab Content -->    
		<div class="tabContent">
					
	        <div id="tivit-desk" class="tivit-desk tabInfo"> 

			<% unless @tivits_participate == nil %>
			 
			     <%= render :partial => 'shared/activity_object_db', :collection =>  @tivits_participate %>
		     
			<% end %>

			</div>
		</div>
		  
	</div>
		
</div>
 
 		
	
