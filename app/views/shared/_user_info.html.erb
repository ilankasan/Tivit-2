<div class="user_info">
  <a href="<%= user_path(current_account.user) %>">
    <%= gravatar_for current_account.user, :size => 30 %>
    <span class="user_name">
      <%= current_account.user.name %>
    </span>
    <span class="activities">
      <%= pluralize(current_account.user.activities.count, "activity") %>
    </span>
  </a>
</div>
