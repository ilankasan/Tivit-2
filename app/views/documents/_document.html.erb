<%if document != nil  && document.name.url != nil%>
	
	<%if(TivitDocUploader.storage.kind_of?(File))%>
		<%= link_to "link to document "+document.file_name, document.name.url %>
		
	<%else%>
	<%=  puts "name "+document.name.url%>

<!-- The line below needs to be generalized by taking amazon url and bucket name from a config file -->
		<%= link_to document.file_name, document.name.url.gsub("tiviti-heroku","tiviti-heroku.s3.amazonaws.com"), :size => "80x80" %>
		
	<%end%>
	<%= link_to " Remove", document,
								:controller => "documents",
								:method     => :delete,
								#:action 	=> :delete,
								:confirm 	=> "Are sure you want to remove file" +document.file_name+"?",
                                :title 		=> document.file_name,
                                :id     => document.id%>
                                
                             
	<br>
	
	 
<%else%>
	<%= image_tag "/images/default-avatar.jpg" %> 
<%end%>	
