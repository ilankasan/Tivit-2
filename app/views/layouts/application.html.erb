<!DOCTYPE html>
<html>
	<head>
		<title>tiviti - <%= @title %> </title>
		<%= csrf_meta_tag %>
		<%= render 'layouts/stylesheets' %>
		<%= javascript_include_tag :defaults %>
		<%= javascript_include_tag "datetimepicker_css" %>  
	</head>
  
	<body>
   		
   		<!-- Header - Main Navigation & New Activity Bar -->
	  	<div id="main-nav-background">
	      	<%= render 'layouts/header' %>
	    </div>
     	
     	<!-- Page Content Area -->
		<div id="page-container">
      	
      		
      		<div id="homepage-left-nav-container">
      		</div>
      		
			<% flash.each do |key, value| %>
				<div class="flash <%= key %>"><%= value %></div>
			<% end %>
	     
		     <div id="homepage-tivit-list-container">
		     	<%= yield %>	     	 
		     </div>
	       
	       <div style="clear: both;"></div>
	       
    	</div>    
    
     
     
    	<!-- Footer -->
	    <div id="footer">
	    	<%= render 'layouts/footer' %>
	    </div>
    
    <div style="clear: both;"></div>
    
    	<%= debug(params) if Rails.env.development? %>
      
	</body>

  
</html>